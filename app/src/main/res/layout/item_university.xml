<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewUniversityName"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/imageViewFavStar"
            android:layout_width="@dimen/dp_16"
            android:layout_height="15dp"
            android:src="@drawable/star"/>

        <ImageView
            android:id="@+id/imageViewToggleDetails"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16"
            android:src="@drawable/plus"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutUniversityDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/textViewUniversityAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/textViewUniversityEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/textViewUniversityFax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/textViewUniversityPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/textViewUniversityRector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/textViewUniversityWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

</LinearLayout>
